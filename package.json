{
	"name": "api-call-like-pro",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"description": "Make professional API calls on the client with React, Typescript, Axios, Zod, and React Queries.",
	"keywords": [
		"react",
		"professional-services",
		"typescript",
		"api-client",
		"api-call",
		"zod",
		"react-query",
		"api-foundation",
		"zod-validation",
		"api-mastery"
	],
	"author": {
		"name": "Mostafa Rahmati",
		"url": "https://github.com/MR-Mostafa"
	},
	"homepage": "https://github.com/MR-Mostafa/api-call-mastery",
	"repository": {
		"type": "git",
		"url": "https://github.com/MR-Mostafa/api-call-mastery.git"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"prepare": "husky install",
		"pre-commit": "npm run spell && npm run prettier:fix && npm run eslint:check",
		"eslint:check": "eslint \"./src/**/*.{ts,tsx,js,jsx}\"",
		"eslint:fix": "eslint --fix \"./src/**/*.{ts,tsx,js,jsx}\"",
		"prettier:check": "prettier --check \"./src/**/*.{ts,tsx,js,jsx}\"",
		"prettier:fix": "prettier --write \"./src/**/*.{ts,tsx,js,jsx}\"",
		"spell": "cspell --no-progress \"./src/**/*\""
	},
	"dependencies": {
		"@mantine/core": "^7.3.2",
		"@mantine/form": "^7.3.2",
		"@mantine/hooks": "^7.3.2",
		"@tabler/icons-react": "^2.44.0",
		"@tanstack/react-query": "^5.13.4",
		"axios": "^1.6.2",
		"qs": "^6.11.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.21.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@cspell/eslint-plugin": "^8.1.3",
		"@fullstacksjs/eslint-config": "^10.7.0",
		"@tanstack/eslint-plugin-query": "^5.12.1",
		"@tanstack/react-query-devtools": "^5.13.5",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/node": "^20.10.4",
		"@types/qs": "^6.9.10",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.16",
		"clsx": "^2.0.0",
		"cspell": "^8.1.3",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-react-refresh": "^0.4.5",
		"husky": "^8.0.3",
		"postcss": "^8.4.32",
		"postcss-preset-mantine": "^1.11.1",
		"postcss-simple-vars": "^7.0.1",
		"prettier": "^3.1.1",
		"sass": "^1.69.5",
		"typescript": "^5.2.2",
		"vite": "^5.0.8"
	}
}
